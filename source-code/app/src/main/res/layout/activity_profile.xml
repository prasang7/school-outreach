<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your profile.."
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_green_hollow"
            android:text="School Authority"
            android:textColor="@color/colorBlack"
            android:id="@+id/bt_profile_schoolAuth"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_green_hollow"
            android:text="Teacher"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:id="@+id/bt_profile_teacher"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_green_hollow"
            android:text="Student"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:id="@+id/bt_profile_student"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Proceed"
            android:background="@drawable/custom_button_green"
            android:textColor="@color/colorWhite"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:id="@+id/bt_profile_proceed"/>
    </LinearLayout>

</LinearLayout>